{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "./src"
  ]
}
